set(PREFIX "@CMAKE_INSTALL_PREFIX@")
set(Crossbow_INCLUDE_DIRS "${PREFIX}/include")

IF(Crossbow_FIND_COMPONENTS)
    FOREACH(comp ${Crossbow_FIND_COMPONENTS})
        IF(@HAS_THREAD@ AND (${comp} STREQUAL "thread"))
            SET(Crossbow_${comp}_FOUND 1)
            find_library(Crossbow_thread_LIBRARY NAMES libcrossbow_thread.a)
            SET(CROSSBOW_LIBRARIES "${CROSSBOW_LIBRARIES} Crossbow_thread_LIBRARY")
        ELSE()
            SET(Crossbow_${comp}_FOUND 0)
        ENDIF()
    ENDFOREACH()
ENDIF()
