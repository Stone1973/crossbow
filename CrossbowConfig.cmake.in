if(NOT Crossbow_INCLUDE_DIRS)
    set(Crossbow_INCLUDE_DIRS @CMAKE_INSTALL_PREFIX@/@INCLUDE_INSTALL_DIR@)
endif()

foreach(_comp ${Crossbow_FIND_COMPONENTS})
    string(TOLOWER ${_comp} _lowercomp)
    set(_comp_file "${CMAKE_CURRENT_LIST_DIR}/Crossbow${_comp}Targets.cmake")
    if(TARGET crossbow_${_lowercomp})
        set(Crossbow_${_comp}_FOUND True)
    elseif(EXISTS ${_comp_file})
        include(${_comp_file})
        set(Crossbow_${_comp}_FOUND True)
    else()
        set(Crossbow_${_comp}_FOUND False)
        set(Crossbow_FOUND False)
        message(STATUS "Crossbow component not found: ${_comp}")
    endif()
endforeach()
